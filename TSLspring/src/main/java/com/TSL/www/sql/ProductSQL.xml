<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper 
			PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
			"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
			
<mapper namespace="prodSQL">

	<!-- 제조사 리스트 출력 -->
	<select id="mfrList" resultType="prodVO" parameterType="prodVO">
		SELECT
		    MFRCD mfrcd, MFRNM mfrnm
		FROM
		    MFR
	</select>

	<!-- 제품 리스트 출력 -->
	<select id="prodList" resultType="prodVO" parameterType="prodVO">
		SELECT
		    PRODCD prodcd, PRODTYPE prodtype
		FROM
		    PROD
		WHERE
		    MFRCD = #{mfrcd}
	</select>
</mapper>